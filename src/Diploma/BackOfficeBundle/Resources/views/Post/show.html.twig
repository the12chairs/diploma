{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post</h1>

    Title
    {{ entity.title }}

    Posttext
    {% autoescape "js" %}
        {{ entity.postText }}
    {% endautoescape %}
    <ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
